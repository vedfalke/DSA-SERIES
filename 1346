class Solution {
    public boolean checkIfExist(int[] arr) {
   
        HashSet<Integer> set=new HashSet<>();
        int n=arr.length;
        for(int i=0;i<n;i++){
            int num=arr[i];
            

         if(set.contains(2*num) || (num%2==0 && set.contains(num/2))){                      // imp conditions to remember while solving
            return true;
         }
         set.add(num);
        }
        return false;
    }
}
