class Solution {
    public int strStr(String haystack, String needle) {
        int n=haystack.length();
        int m=needle.length();
        for(int i=0;i<=n-m;i++){                                                      // outer loop to check index in haystack
            int j=0;                                                                  // we took j==0 before innner loop so we can use it when j==m.
            for( j=0;j<m;j++){
                if(haystack.charAt(i+j)!=needle.charAt(j)){
                    break;
                }
            }
            if(j==m){
                return i;
            }
            }
        
        return -1;
    }
}
