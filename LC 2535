class Solution {
    public int alternateDigitSum(int n) {
        ArrayList<Integer> ans=new ArrayList<>();
        while(n>0){
            ans.add(n%10);
            n=n/10;
        }
        Collections.reverse(ans);

        int sum=0;
        for(int i=0;i<ans.size();i++){
            if(i%2==0){
                sum+=ans.get(i);
            }else{
                sum-=ans.get(i);
            }
        }
        return sum;
    }
}
