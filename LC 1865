class FindSumPairs {
    int[] nums1;
    int[] nums2;
  HashMap<Integer,Integer> ans;
    public FindSumPairs(int[] nums1, int[] nums2) {
        this.nums1=nums1;
        this.nums2=nums2;
      this.ans=new HashMap<>();
      for (int num : nums2) {
            ans.put(num, ans.getOrDefault(num, 0) + 1);
        }
    }
    
    public void add(int index, int val) {
      int oldvalue=nums2[index];
      ans.put(oldvalue,ans.get(oldvalue)-1);
      if(ans.get(oldvalue)==0){
        ans.remove(oldvalue);
      }
      nums2[index]+=val;
      int newvalue=nums2[index];

ans.put(newvalue,ans.getOrDefault(newvalue,0)+1);
    
    }
    
    public int count(int tot) {
           int count = 0;
        for (int ele : nums1) {
            int complement = tot - ele;
            count += ans.getOrDefault(complement, 0);
        }
        return count;
    }
}
