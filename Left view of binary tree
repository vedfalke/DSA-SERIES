class Solution {
    ArrayList<Integer> leftView(Node root) {
     ArrayList<Integer> ans=new ArrayList<>();  // arraylist to store ans
     if(root==null)return ans;
     
       Queue<Node> q = new LinkedList<>();              // level order traversal for left view of binary tree
     q.add(root);
     while(!q.isEmpty()){                        
         int size=q.size();
         for(int i=0;i<size;i++){
         Node node=q.remove();
         
     if(i==0){                                         // checking if its first index, if yes, then adding the removed data.
         ans.add(node.data);
     } 
     if(node.left!=null) q.add(node.left);
     if(node.right!=null)q.add(node.right);
         
     }
     }
     
       return ans; 
    }
}
